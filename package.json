    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "next-sanity": "^11.4.2",
    "next-seo": "^6.8.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.65.0",
    "react-player": "^3.3.3",
    "sanity": "^4.10.2",
    "styled-components": "^6.1.19",
    "swiper": "^12.0.2",
